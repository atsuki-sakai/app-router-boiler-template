// useTranslationをPageComponents内で使っているのでエラーメッセージが表示される。eslintの設定を追加する必要があります。

{
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
  ],
  "plugins": [
      "react",
      "react-hooks"
  ],
  "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
  }
}
